generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          Int      @id @default(autoincrement())
  title       String // Название (Frontend Dev)
  company     String // Компания
  link        String   @unique // Ссылка на вакансию (уникальная!)
  description String? // Текст вакансии
  status      String   @default("NEW") // NEW, AI_DONE, SENT
  response    String? // Текст ответа
  aiReply     String? // Тут будет лежать текст от ChatGPT
  createdAt   DateTime @default(now())
  source      String   // linkedin, dou, workua, djinni
  updatedAt   DateTime @updatedAt
}
